<?xml version="1.0" encoding="utf-8"?>
<org.cz.media.player.library.extension.PlayerGestureLayout
    android:id="@+id/playerGestureLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/brightnessLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="30dp"
        android:paddingBottom="22dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/progress_popup_background"
        android:layout_gravity="center_vertical">

        <org.cz.media.player.library.extension.ProgressStatusView
            android:id="@+id/brightnessStatusView"
            android:layout_width="4dp"
            android:layout_height="150dp"
            android:progress="50"
            app:progressBackground="@drawable/progress_background"
            android:progressDrawable="@drawable/progress_drawable" />

        <ImageView
            android:id="@+id/brightnessImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:padding="6dp"
            android:src="@drawable/brightness_level_drawable"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/soundLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="30dp"
        android:paddingBottom="22dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/progress_popup_background"
        android:layout_gravity="right|center_vertical">

        <org.cz.media.player.library.extension.ProgressStatusView
            android:id="@+id/soundStatusView"
            android:layout_width="4dp"
            android:layout_height="150dp"
            app:progressBackground="@drawable/progress_background"
            android:progressDrawable="@drawable/progress_drawable" />

        <ImageView
            android:id="@+id/soundImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/sound_level_drawable"/>

    </LinearLayout>


</org.cz.media.player.library.extension.PlayerGestureLayout>