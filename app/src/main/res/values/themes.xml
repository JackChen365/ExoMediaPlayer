<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExoMediaPlayer"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
        <item name="mediaPlayer">@style/MediaPlayer.Compat</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="PlayerAnimationControlLayout.Custom">
        <item name="control_left_layout">@layout/media_controller_left_placeholder_layout1</item>
        <item name="control_top_layout">@layout/media_controller_top_placeholder_layout1</item>
        <item name="control_right_layout">@layout/media_controller_right_placeholder_layout1</item>
        <item name="control_bottom_layout">@layout/media_controller_bottom_placeholder_layout1</item>
        <item name="control_center_layout">@layout/media_controller_placeholder_layout1</item>
    </style>

    <style name="Loading">
        <item name="loading_petal">@drawable/loading</item>
        <item name="loading_petalSize">8</item>
        <item name="loading_startColor">?colorPrimary</item>
        <item name="loading_endColor">?colorAccent</item>
    </style>

    <style name="DefaultTimeBar.Mini">
        <item name="bar_scrubber">@drawable/player_mini_time_bar_scrubber_blue_drawable</item>
        <item name="bar_progress">@drawable/player_mini_time_bar_progress_blue_drawable</item>
    </style>

</resources>