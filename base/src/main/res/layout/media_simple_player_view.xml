<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <org.cz.media.player.base.AspectRatioFrameLayout
      android:id="@id/playerContentView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center">

    <!-- Video surface will be inserted as the first child of the content frame. -->
    <org.cz.media.player.base.subtitle.SubtitleView
        android:id="@id/playerSubtitleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

  </org.cz.media.player.base.AspectRatioFrameLayout>

  <org.cz.media.player.base.overlay.FrameOverlayLayout
      android:id="@id/playerOverlayView"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <ViewStub
      android:id="@+id/playerControlLayoutViewStub"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout="@layout/media_player_simple_control_layout"/>

  <!--<org.cz.media.player.base.layout.AnimationMenuLayout
      android:id="@id/playerMenuLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>-->

</merge>
